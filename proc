import os
import io
import base64
import json
from openai import OpenAI
from pdf2image import convert_from_path
from IPython.display import display, JSON, Image as IPImage

# ---------------- CONFIGURATION ----------------
# Remplacez par l'IP de votre instance GPU ou "localhost" si tunnel SSH
# L'endpoint vLLM est compatible OpenAI
API_URL = "http://localhost:8000/v1" 
API_KEY = "EMPTY" # vLLM n'exige pas de cl√© par d√©faut
MODEL_NAME = "Qwen/Qwen2-VL-72B-Instruct-AWQ" # Doit correspondre exactement au nom lanc√© sur le serveur

client = OpenAI(base_url=API_URL, api_key=API_KEY)

# ---------------- FONCTIONS UTILITAIRES ----------------

def pdf_page_to_base64(pdf_path, page_num=0, dpi=200):
    """
    Convertit une page PDF en base64 pour l'envoi API.
    Retourne aussi l'objet image pour affichage local.
    """
    try:
        # Conversion PDF -> Image (RAM locale)
        images = convert_from_path(pdf_path, dpi=dpi)
        if page_num >= len(images):
            raise ValueError("Num√©ro de page hors limites")
        
        pil_image = images[page_num]
        
        # Encodage en JPEG (plus l√©ger que PNG pour le r√©seau)
        buff = io.BytesIO()
        pil_image.save(buff, format="JPEG", quality=95)
        b64_string = base64.b64encode(buff.getvalue()).decode("utf-8")
        
        return pil_image, b64_string
    except Exception as e:
        print(f"Erreur conversion image: {e}")
        return None, None

def extract_data_remote(pdf_path):
    print(f"üì° Traitement de : {pdf_path}")
    
    # 1. Pr√©paration de l'image
    img, img_b64 = pdf_page_to_base64(pdf_path)
    if not img_b64: return
    
    # Affichage de contr√¥le dans le notebook
    print("Document envoy√© au mod√®le :")
    display(img.resize((300, 400))) # Miniature

    # 2. D√©finition du Prompt
    system_prompt = "Tu es un expert juridique. Extrais les donn√©es au format JSON strict."
    user_prompt = """
    Analyse cette procuration bancaire.
    Extrais un JSON structur√© contenant :
    - objet_procuration
    - societe (raison_sociale, siren)
    - mandant (nom, date_naissance)
    - mandataire (nom, date_naissance)
    - pouvoirs (liste d√©taill√©e avec : type, comptes_concernes, plafond, strategie_signature).
    
    Pour la strat√©gie de signature, pr√©cise si c'est SEULE ou CONJOINTE.
    Si un SIREN est pr√©sent dans un tampon, lis-le.
    """

    # 3. Appel API vers l'instance GPU
    try:
        response = client.chat.completions.create(
            model=MODEL_NAME,
            messages=[
                {"role": "system", "content": system_prompt},
                {
                    "role": "user",
                    "content": [
                        {"type": "text", "text": user_prompt},
                        {
                            "type": "image_url",
                            "image_url": {"url": f"data:image/jpeg;base64,{img_b64}"},
                        },
                    ],
                }
            ],
            temperature=0.01, # Tr√®s faible pour la stabilit√© du JSON
            max_tokens=2048,
            extra_body={"guided_json": "json_object"} # Optionnel: aide vLLM si activ√©
        )
        
        # 4. Traitement de la r√©ponse
        raw_content = response.choices[0].message.content
        
        # Nettoyage des balises markdown √©ventuelles
        clean_json = raw_content.replace("```json", "").replace("```", "").strip()
        
        data = json.loads(clean_json)
        return data

    except Exception as e:
        print(f"‚ùå Erreur API : {e}")
        return None

# ---------------- EXECUTION ----------------
mon_pdf = "exemple_procuration.pdf" # Assurez-vous que ce fichier est dans votre workspace local

if os.path.exists(mon_pdf):
    resultat = extract_data_remote(mon_pdf)
    if resultat:
        print("\n‚úÖ Extraction r√©ussie :")
        display(JSON(resultat)) # Affichage interactif
else:
    print(f"Fichier {mon_pdf} introuvable localement.")

------- MULTI PAGES --------

import io
import base64
import json
import time
from openai import OpenAI
from pdf2image import convert_from_path
from IPython.display import display, JSON

# --- CONFIGURATION ---
API_URL = "http://localhost:8000/v1"
API_KEY = "EMPTY"
MODEL_NAME = "Qwen/Qwen2-VL-72B-Instruct-AWQ"

client = OpenAI(base_url=API_URL, api_key=API_KEY, timeout=300) # Timeout augment√© pour le multi-page

def encode_image_optimized(pil_image):
    """
    Convertit et optimise une image pour l'envoi API.
    Redimensionner r√©duit le nombre de tokens visuels et acc√©l√®re le traitement.
    """
    # On redimensionne si l'image est tr√®s grande (ex: > 1500px) pour acc√©l√©rer
    # Qwen voit tr√®s bien m√™me en 1024x1024
    max_size = 1024
    if max(pil_image.size) > max_size:
        pil_image.thumbnail((max_size, max_size))
    
    buff = io.BytesIO()
    # JPEG qualit√© 85 est le meilleur ratio poids/qualit√© pour l'IA
    pil_image.convert('RGB').save(buff, format="JPEG", quality=85)
    return base64.b64encode(buff.getvalue()).decode("utf-8")

def analyze_full_pdf(pdf_path):
    print(f"üìö Lecture compl√®te de : {pdf_path}")
    start_time = time.time()
    
    # 1. Conversion de TOUTES les pages (dpi=150 suffit et acc√©l√®re x2 vs 200)
    try:
        pages = convert_from_path(pdf_path, dpi=150)
        print(f"üëâ Nombre de pages d√©tect√©es : {len(pages)}")
    except Exception as e:
        print(f"‚ùå Erreur lecture PDF : {e}")
        return

    # 2. Construction du contenu du message
    # On commence par l'instruction texte
    user_content = [
        {
            "type": "text", 
            "text": "Analyse ces images qui constituent les pages d'une seule et m√™me procuration. Extrais les informations demand√©es au format JSON strict."
        }
    ]
    
    # On ajoute chaque page comme une image distincte
    for i, page in enumerate(pages):
        print(f"   - Encodage page {i+1}/{len(pages)}...")
        b64_img = encode_image_optimized(page)
        user_content.append({
            "type": "image_url",
            "image_url": {"url": f"data:image/jpeg;base64,{b64_img}"}
        })

    # 3. Prompt Syst√®me
    system_prompt = """
    Tu es un expert juridique. Extrais les entit√©s du document complet.
    Attention : Les informations (signatures, tampons) peuvent √™tre sur la derni√®re page.
    Format JSON attendu :
    {
      "mandant": {"nom": "string", "date_naissance": "string"},
      "mandataire": {"nom": "string"},
      "societe": {"raison_sociale": "string", "siren": "string"},
      "pouvoirs": [{"type": "string", "plafond": "number", "strategie": "SEULE/CONJOINTE"}]
    }
    """

    print("üöÄ Envoi au mod√®le (patience, le traitement est lourd)...")
    
    try:
        response = client.chat.completions.create(
            model=MODEL_NAME,
            messages=[
                {"role": "system", "content": system_prompt},
                {"role": "user", "content": user_content}
            ],
            temperature=0.1,
            max_tokens=2048
        )
        
        duration = time.time() - start_time
        print(f"‚è±Ô∏è Temps total de traitement : {duration:.1f} secondes")
        
        # R√©sultat
        raw_content = response.choices[0].message.content
        clean_json = raw_content.replace("```json", "").replace("```", "").strip()
        return json.loads(clean_json)

    except Exception as e:
        print(f"‚ùå Erreur API : {e}")
        return None

# --- TEST ---
mon_pdf = "exemple_procuration.pdf"
if 'convert_from_path' in globals(): # V√©rif simple si on est dans le nb
    res = analyze_full_pdf(mon_pdf)
    if res:
        display(JSON(res))
